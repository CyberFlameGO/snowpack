{
  "include": ["src", "assets/require-or-import.ts"],
  "exclude": ["lib"],
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "lib/esm",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "es2018"
  }
}
